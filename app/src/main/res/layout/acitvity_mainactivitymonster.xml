<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbg">

    <ImageView
        android:id="@+id/imageGoblin"
        android:layout_width="161dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/goblin" />

    <Spinner
        android:id="@+id/monsterClassResult"
        android:layout_width="116dp"
        android:layout_height="25dp"
        android:fontFamily="@font/rakkas"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/lvl"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/monsterlvl"
        app:layout_constraintTop_toTopOf="@+id/Classtxt" >
    </Spinner>


    <EditText
        android:id="@+id/monsterlvl"
        android:layout_width="104dp"
        android:layout_height="33dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/monsterLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/monsterLevel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Classtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rakkas"
        android:text="Class:"
        app:layout_constraintEnd_toEndOf="@+id/monsterLevel"
        app:layout_constraintStart_toStartOf="@+id/monsterLevel"
        app:layout_constraintTop_toBottomOf="@+id/monsterLevel" />

    <TextView
        android:id="@+id/monsterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rakkas"
        android:text="Level:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/monsterHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="324dp"
        android:fontFamily="@font/rakkas"
        android:text="Health"
        app:layout_constraintEnd_toEndOf="@+id/monsterLevel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/monsterLevel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monsterParry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rakkas"
        android:text="Monster Parry"
        app:layout_constraintEnd_toEndOf="@+id/monsterEvasion"
        app:layout_constraintStart_toStartOf="@+id/monsterEvasion"
        app:layout_constraintTop_toBottomOf="@+id/monsterEvasion" />

    <TextView
        android:id="@+id/monsterEvasion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rakkas"
        android:text="Monster Evasion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/monsterHP"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/monsterHP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646" />

    <TextView
        android:id="@+id/monsterHPresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rakkas"
        android:text="-!-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/monsterHP"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/monsterEvasionresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rakkas"
        android:text="-!-"
        app:layout_constraintEnd_toEndOf="@+id/monsterHPresult"
        app:layout_constraintStart_toStartOf="@+id/monsterHPresult"
        app:layout_constraintTop_toTopOf="@+id/monsterEvasion" />

    <TextView
        android:id="@+id/monsterParryresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rakkas"
        android:text="-!-"
        app:layout_constraintEnd_toEndOf="@+id/monsterEvasionresult"
        app:layout_constraintStart_toStartOf="@+id/monsterEvasionresult"
        app:layout_constraintTop_toTopOf="@+id/monsterParry" />

    <ImageView
        android:id="@+id/imageLogoVisible"
        android:layout_width="156dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logovisible" />

</androidx.constraintlayout.widget.ConstraintLayout>